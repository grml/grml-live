# {{{ log
config_log(){
if checkbootparam 'log' || checkbootparam 'debug' ; then
   export DEBUG="/tmp/grml.log.`date +%Y%m%d`"
   touch "${DEBUG}"
   einfo "Bootparameter log found, debug log file from grml-autoconfig available at '${DEBUG}'"
else
   DEBUG="/dev/null"
