                KDEKEYBOARD="ch"
                CHARSET="iso8859-15"
                KDEKEYBOARDS="de,us,fr"
                TZ="Europe/Zurich"
                ;;
        ch|ch-utf8)
                # Swiss version (basically de with some modifications)
                LANGUAGE="de_CH:de"
                COUNTRY="ch"
                LANG="de_CH.UTF-8"
                KEYTABLE="sg-latin1"
                XKEYBOARD="de_CH"
                KDEKEYBOARD="de_CH"
                CHARSET="utf8"
                # Additional KDE Keyboards
                KDEKEYBOARDS="de,us,fr"
                TZ="Europe/Zurich"
